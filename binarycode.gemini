<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Binary ASCII Converter</title>
    <style>
        :root {
            --primary: #2563eb;
            --secondary: #10b981;
            --bg: #f8fafc;
            --text: #1e293b;
        }

        body {
            font-family: 'Inter', system-ui, sans-serif;
            background-color: var(--bg);
            color: var(--text);
            display: flex;
            justify-content: center;
            padding: 40px 20px;
        }

        .converter-card {
            background: white;
            padding: 2rem;
            border-radius: 12px;
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 600px;
        }

        h1 { font-size: 1.5rem; text-align: center; margin-bottom: 1.5rem; }

        label { display: block; font-weight: 600; margin-bottom: 0.5rem; font-size: 0.9rem; }

        textarea {
            width: 100%;
            height: 120px;
            padding: 12px;
            border: 1px solid #cbd5e1;
            border-radius: 8px;
            font-family: 'Courier New', monospace;
            font-size: 1rem;
            margin-bottom: 1rem;
            box-sizing: border-box;
        }

        .button-group {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 10px;
            margin-bottom: 1.5rem;
        }

        button {
            padding: 12px;
            border: none;
            border-radius: 6px;
            font-weight: 600;
            cursor: pointer;
            transition: opacity 0.2s;
            color: white;
        }

        .btn-to-binary { background-color: var(--primary); }
        .btn-to-text { background-color: var(--secondary); }
        button:hover { opacity: 0.9; }

        .output-container {
            background: #f1f5f9;
            padding: 15px;
            border-radius: 8px;
            border-left: 4px solid var(--primary);
            min-height: 50px;
            word-break: break-all;
            font-family: 'Courier New', monospace;
        }
    </style>
</head>
<body>

<div class="converter-card">
    <h1>ASCII â†” Binary Converter</h1>
    
    <label for="inputData">Input Text or Binary Code</label>
    <textarea id="inputData" placeholder="Type text to encode or binary strings to decode..."></textarea>

    <div class="button-group">
        <button class="btn-to-binary" onclick="textToBinary()">Text to Binary</button>
        <button class="btn-to-text" onclick="binaryToText()">Binary to Text</button>
    </div>

    <label>Result</label>
    <div id="outputResult" class="output-container">Your result will appear here...</div>
</div>

<script>
    const input = document.getElementById('inputData');
    const output = document.getElementById('outputResult');

    function textToBinary() {
        const str = input.value;
        if (!str) return;

        const result = str.split('')
            .map(char => {
                // Get ASCII decimal, convert to base 2, pad to 8 bits
                return char.charCodeAt(0).toString(2).padStart(8, '0');
            })
            .join(' ');
        
        output.textContent = result;
    }

    function binaryToText() {
        const binStr = input.value.trim().replace(/\s/g, '');
        if (!binStr) return;

        // Ensure the string only contains 0s and 1s
        if (!/^[01]+$/.test(binStr)) {
            output.textContent = "Error: Please enter only 1s and 0s.";
            return;
        }

        try {
            // Split binary into chunks of 8 bits
            const chunks = binStr.match(/.{1,8}/g);
            const result = chunks
                .map(chunk => String.fromCharCode(parseInt(chunk, 2)))
                .join('');
            
            output.textContent = result;
        } catch (e) {
            output.textContent = "Error decoding binary data.";
        }
    }
</script>

</body>
</html>
